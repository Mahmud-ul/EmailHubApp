@using Microsoft.AspNetCore.Http
@using EmailHubApp.Models;
@model SearchRequirementsOperation
@{
    ViewData["Title"] = "AddUpdateSearchRequirements";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger"><strong>Error:&nbsp;</strong>@ViewBag.ErrorMessage</div>
}
@{
    var title = Context.Session.GetString("Title");
}
<h2>@title Search-Requirement</h2>
<hr />
<br />
<div>
    <form method="post" asp-controller="Security" asp-action="AddUpdateSearchRequirements">
        <div class="row">
            <div class="col-md-8">
                <div>
                    <label asp-for="ApiKey" class="col-md-3">API Key</label>
                    <input type="text" asp-for="ApiKey" class="col-md-6" required="required" placeholder="Enter API Key" />
                    <span asp-validation-for="ApiKey" class="text-danger"></span><br />
                    @if (ViewBag.ApiKeyExists != null)
                    {
                        <label class="col-md-3"></label>
                        <span style="color:red;">@ViewBag.ApiKeyExists</span>
                    }
                </div><br />

                <div>
                    <label asp-for="CX" class="col-md-3">CX</label>
                    <input type="text" asp-for="CX" class="col-md-6" required="required" placeholder="Enter CX" />
                    <span asp-validation-for="CX" class="text-danger"></span><br />
                    @if (ViewBag.CxExists != null)
                    {
                        <label class="col-md-3"></label>
                        <span style="color:red;">@ViewBag.CxExists</span>
                    }
                </div><br />

                <div class="checkbox">
                    <label class="col-md-3"></label>
                    <label>
                        <input type="checkbox" asp-for="IsActive"> Active
                    </label>
                </div><br />
                <div>
                    <label class="col-md-3"></label>
                    @if (title == "Create")
                    {
                        <button type="submit" class="btn btn-success">Create</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary">Update</button>
                    }
                    <a asp-controller="Security" asp-action="SearchRequirementsList" class="btn btn-secondary">Search-Requirements List</a>
                </div>
            </div>
        </div>
    </form>
</div>

